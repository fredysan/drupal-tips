{
    "editor.renderWhitespace": "boundary",
    "editor.fontSize": 16,
    "files.trimTrailingWhitespace": true,
    "files.eol": "\n",
    "workbench.startupEditor": "newUntitledFile",
    "php.validate.executablePath": "c:\\tools\\php72\\php.exe",
    "php.validate.run": "onType",
    "php.validate.enable": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Atom One Dark",
    "vim.leader": ",",
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.otherModesKeyBindings": [
        {
            "before": ["<c-r>", "p"],
            "after": ["<leader>", "p"]
        },
        {
            "before": ["ñ"],
            "after": [";"]
        },
        {
            "before": ["0"],
            "after": ["_"]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        },
        {
            "before": ["k", "k"],
            "after": ["<Esc>"]
        },
        {
            "before": ["ñ", "ñ"],
            "after": ["<Esc>", "A", ";", "<Esc>"]
        },
        {
            "before": [";", ";"],
            "after": ["<Esc>", "A", ";", "<Esc>"]
        },
        {
            "before": ["=", "+" ],
            "after": ["<Esc>", "A", " ", "=", ">", " "]
        },
        {
            "before": [",", "," ],
            "after": ["<Esc>", "A", ",", "<Esc>"]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["<C-n>"],
            "after": [],
            "commands": [
                {
                    "command": ":nohl",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": [" "],
            "after": ["leader", "leader", "2", "s"],
        }
    ],
    "css.validate": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.tabSize": 2,
    "editor.autoIndent": true,
    "editor.insertSpaces": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "off",
    "editor.detectIndentation": true,
    "files.associations": {
        "*.inc": "php",
        "*.module": "php",
        "*.install": "php",
        "*.theme": "php",
        "*.tpl.php": "php",
        "*.test": "php",
        "*.php": "php"
    },
    "html.format.enable": true,
    "html.format.wrapLineLength": 80,
    "window.zoomLevel": -1,
    "editor.snippetSuggestions": "top",
    "editor.lineNumbers": "relative",
    "php.executablePath": "c:\\tools\\php72\\php.exe",
    "phpcs.executablePath": "c:\\tools\\vendor\\bin\\phpcs",
    "phpcs.standard": "C:\\tools\\vendor\\drupal\\coder\\coder_sniffer\\Drupal",
    "phpfmt.custom_arguments": "--indent_with_space=2 --enable_auto_align"
}

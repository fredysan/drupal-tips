{
    "editor.renderWhitespace": "boundary",
    "editor.fontSize": 16,
    "files.trimTrailingWhitespace": true,
    "files.eol": "\n",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Atom One Dark",
    "vim.leader": ",",
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.sneak": true,
    "vim.enableNeovim": true,
    "vim.neovimPath": "C:\\tools\\neovim\\Neovim\\bin\\nvim.exe",
    "vim.ignorecase": true,
    "vim.hlsearch": false,
    "vim.handleKeys": {
        "<C-d>": false, // <C-d> to handle multiple cursors.
    },
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        },
        {
            "before": ["k", "k"],
            "after": ["<Esc>"]
        },
        {
            "before": ["ñ", "ñ"],
            "after": ["<Esc>", "A", ";", "<Esc>"]
        },
        {
            "before": ["]", "]"],
            "after": ["<Esc>", "A", " ", "{", "<Enter>"]
        },
        {
            "before": [";", ";"],
            "after": ["<Esc>", "A", ";", "<Esc>"]
        },
        {
            "before": [",", "," ],
            "after": ["<Esc>", "A", ",", "<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-n>"],
            "after": [],
            "commands": [
                {
                    "command": ":nohl",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": [" "],
            "after": ["leader", "leader", "2", "s"],
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "p",
            ],
            "after": [ "p", "g", "v", "y" ]
        },
        {
            "before": [
                ">"
            ],
            "commands": [
                {
                    "command": "editor.action.indentLines"
                }
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                {
                    "command": "editor.action.outdentLines"
                }
            ]
        },
    ],
    "css.validate": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.tabSize": 2,
    "editor.autoIndent": true,
    "editor.insertSpaces": true,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "off",
    "editor.detectIndentation": true,
    "files.associations": {
        "*.inc": "php",
        "*.module": "php",
        "*.install": "php",
        "*.theme": "php",
        "*.tpl.php": "php",
        "*.test": "php",
        "*.php": "php"
    },
    "html.format.enable": true,
    "html.format.wrapLineLength": 80,
    "window.zoomLevel": -1,
    "editor.snippetSuggestions": "top",
    "editor.lineNumbers": "relative",
    "workbench.iconTheme": "material-icon-theme",
    "php.validate.executablePath": "c:\\tools\\php72\\php.exe",
    "php.validate.run": "onType",
    "php.validate.enable": true,
    "php.suggest.basic": false,
    "phpcs.executablePath": "c:\\tools\\vendor\\bin\\phpcs.bat",
    "phpcs.standard": "c:\\tools\\vendor\\drupal\\coder\\coder_sniffer\\Drupal",
    "php-docblocker.gap": true,
    "php-docblocker.useShortNames": true,
    "workbench.sideBar.location": "right",
}